generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Order {
  id            Int      @id @default(autoincrement())
  timestamp     DateTime @default(now())
  symbol        String
  qty           String
  side          Side
  type          Type
  time_in_force TimeInForce
  order_class   OrderClass
  limit_price   String?   // optional
  stop_price    String?   // optional
  trail_price   String?   // optional
  trail_percent String?   // optional
  take_profit   TakeProfit?
  stop_loss     StopLoss?
}

model TakeProfit {
  id          Int    @id @default(autoincrement())
  limit_price String
  Order       Order  @relation(fields: [orderId], references: [id])
  orderId     Int    @unique
}

model StopLoss {
  id               Int    @id @default(autoincrement())
  stop_price       String
  stop_limit_price String
  Order            Order  @relation(fields: [orderId], references: [id])
  orderId          Int    @unique
}

enum Side {
  buy
  sell
}

enum Type {
  market
  limit
}

enum TimeInForce {
  day
  gtc
  opg
}

enum OrderClass {
  simple
  bracket
  oco
  oto
}